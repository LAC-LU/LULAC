          </div>
        <div class="owl-carousel">
            <% blogs.forEach(function(blog) { %>
                <div class="row event-item">
                  <div class="col-lg-6">
                    <img src="data:image/<%=blog.img.contentType%>;base64, 
                    <%=blog.img.data.toString('base64')%>"  class="img-fluid" alt="">
                  </div>
                  <div class="col-lg-6 pt-4 pt-lg-0 content">
                    <h3 class="text-center"><%= blog.title %></h3>
                    <div class="price">
                      <p><span><%= (blog.date).toString().slice(4,15) %></span></p>
                    </div>
                    <p class="text-justify"><%= blog.description %></p>         
