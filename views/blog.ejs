      <section class="blog">
        <div class="container text-center">
            <div class="display-3 mt-5 text-center">
                <h1>Recent <span>Blogs</span></h1>
            </div>
            <hr>
            <div class="row justify-content-center pb-4">
                <p>Don't raise your voice, improve your argument.</p>
            </div>
            <div class="row d-flex">
                <% recent.forEach(function(blog){ %>
                    <div class="col-md-4 d-flex">
                        <div class="blog-entry">
                            <a href="blog-single"><img src="data:image/<%=blog.img.contentType%>;base64, 
                                <%=blog.img.data.toString('base64')%>"></a>
                            <div class="text">
                                <div class="mb-3">
                                    <div><a href="#"><%= (blog.date).toString().slice(4,15) %></a></div>
                                    <div><a href="#">Admin</a></div>
                                </div>
                                <h3 class="heading mt-3"><a href="#"><%= blog.title %></a></h3>
                                <p><%= blog.description.toString().slice(0,5)%> </p>
                              <p><a href= "<%= blog._id %>"> Know More -<i class="ion-ios-arrow-forward"></i></a></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!---End recent blogs section-->

      <!---Past blogs section-->
	
      <div class="container pb-5">
        <div class="text-center pt-4 display-3">
          <h1>Past<span> Blogs</span> </h1>
